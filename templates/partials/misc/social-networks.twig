{#
Paramètres additionnels possibles (à passer dans le include) :
- list_class    => Classe(s) supplémentaires à ajouter à .reseaux-sociaux
- links_class   => Classe(s) supplémentaires à ajouter à reseaux-sociaux__link
#}

{% if social_networks %}
	<ul class="reseaux-sociaux {{ list_class }}">
		{% for soc_net in social_networks %}
			<li class="reseaux-sociaux__item">
				<a href="{{ soc_net.lien }}" target="_blank" rel="noopener" title="{{ soc_net.nom_reseau }}"
				   class="reseaux-sociaux__link reseaux-sociaux__link--{{ soc_net.slug }} {{ links_class }}">
					<i class="reseaux-sociaux__icon icon-{{ soc_net.slug }}"></i>
				</a>
			</li>
		{% endfor %}
	</ul>
{% endif %}